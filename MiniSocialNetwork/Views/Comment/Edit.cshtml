@model MiniSocialNetwork.Models.Comment
@{
    ViewBag.Title = "Edit";
}


<form method="post" action="/Comment/Edit/@Model.CommentId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.HiddenFor(m => m.CommentId)

    @Html.Label("Content", "Comment Content")
    <br />
    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control" } })
    <br /><br />
    @Html.HiddenFor(m => m.CreatedAt)
    <label>Select post</label>
    @Html.DropDownListFor(m => m.PostId,
    new SelectList(Model.Posts, "Value", "Text"),
    "Select post", new { @class = "form-control" })
    <br />
    <button class="btn btn-sm btn-success" type="submit">Edit comment</button>

    
</form>


