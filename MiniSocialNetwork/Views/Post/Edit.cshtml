@model MiniSocialNetwork.Models.Post


<h2>Post Edit</h2>

<form method="post" action="/Post/Edit/@Model.PostId">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.PostId)

    @Html.Label("Content", "Post content")
    <br />
    @Html.Editor("Content")
    <br /><br />

    <button class="btn btn-success" type="submit">Edit post</button>
</form>
